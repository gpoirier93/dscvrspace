<script>
  function adjustBackgroundImageSize() {
    $("#background-container").width($(window).width());
    $("#background-container").height($(window).height()-68);
    $("#background-img").width($(window).width());
    $("#background-img").height($(window).height()-68);
  };
  $(document).ready(function() {
    adjustBackgroundImageSize();
  });
  $(window).resize(function() {
    adjustBackgroundImageSize();
  });
</script>
